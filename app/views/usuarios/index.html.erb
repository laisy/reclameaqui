<p id="notice"><%= notice %></p>

<h2>Usuários</h2>
<br/><br/>

<div class="formulario-tabela">
  <table class="table table-striped">
    <thead>
      <tr>
        <th> Login </th>
        <th> Email </th>
        <th> Senha </th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @usuarios.each do |usuario| %>
        <tr>
          <td><%= usuario.login %></td>
          <td><%= usuario.email %></td>
          <td><%= usuario.senha %></td>
          <td><%= link_to 'Show', usuario %></td>
          <td><%= link_to 'Edit', edit_usuario_path(usuario) %></td>
          <td><%= link_to 'Destroy', usuario, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br>

<%= link_to 'Novo Usuário', new_usuario_path, :class => "btn btn-dark" %>
